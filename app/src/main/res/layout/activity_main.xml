<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp" android:background="#F0F4C3" tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTranscription"
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="1"
        android:text="Tap 'Start Recording' to begin...\n\nTranscription will appear here."
        android:textSize="18sp"
        android:padding="16dp"
        android:gravity="top|start" android:background="#FFFFFF" android:textColor="@android:color/black"
        android:fontFamily="monospace"
        android:layout_marginBottom="16dp"/> <ProgressBar
    android:id="@+id/progressBar"
    style="?android:attr/progressBarStyleHorizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:indeterminate="true"
    android:visibility="gone"
    android:layout_marginBottom="16dp"/> <EditText
    android:id="@+id/etManualInput"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Edit or add notes here..."
    android:padding="12dp"
    android:background="#E0E0E0" android:textColor="@android:color/black"
    android:textSize="16sp"
    android:layout_marginBottom="24dp"/> <Button
    android:id="@+id/btnRecord"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Start Recording"
    android:padding="14dp"
    android:textSize="18sp"
    android:gravity="center"
    app:backgroundTint="#4CAF50" android:textColor="@android:color/white"
    android:layout_marginBottom="12dp"/> <Button
    android:id="@+id/btnCreateEvent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Create Calendar Event"
    android:padding="14dp"
    android:textSize="18sp"
    android:gravity="center"
    app:backgroundTint="#2196F3" android:textColor="@android:color/white"/>

</LinearLayout>